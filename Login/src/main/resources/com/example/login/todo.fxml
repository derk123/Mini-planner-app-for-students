<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.example.login.TodoController" spacing="10" alignment="center">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <TextField fx:id="taskInput" promptText="Enter a new task" />
    <DatePicker fx:id="datePicker" promptText="Select date" />
    <Button fx:id="addButton" text="Add Task" onAction="#handleAddTask" />
    <Button fx:id="deleteButton" text="Delete Task" onAction="#handleDeleteTask" />
    <ListView fx:id="taskList" />
</VBox>
